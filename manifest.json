{
    "manifest_version": 3,
    "name": "oii",
    "description": "Adds ii (improvement indicator) metric to user profiles on the osu! website",
    "version": "0.1",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/hello_extensions.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://osu.ppy.sh/users/*/osu"
            ],
            "run_at": "document_idle"
        }
    ]
}